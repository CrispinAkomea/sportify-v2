<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sportify.controller.component.LeagueTableViewController">
   <children>
      <TableView id="leagueTableView" fx:id="leagueTableView">
         <columns>
            <TableColumn fx:id="positionColumn" editable="false" maxWidth="40.0" minWidth="40.0" prefWidth="40.0" resizable="false" text="#" />
            <TableColumn fx:id="movementColumn" editable="false" maxWidth="40.0" minWidth="40.0" prefWidth="40.0" resizable="false" sortable="false" />
            <TableColumn id="teamColumn" fx:id="teamColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="207.0" prefWidth="-1.0" resizable="true" sortType="DESCENDING" text="TEAM" />
            <TableColumn fx:id="playColumn" editable="false" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" resizable="false" text="P" />
            <TableColumn fx:id="winColumn" editable="false" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" resizable="false" text="W" />
            <TableColumn fx:id="drawColumn" editable="false" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" resizable="false" text="D" />
            <TableColumn fx:id="lossColumn" editable="false" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" resizable="false" text="L" />
            <TableColumn fx:id="gfColumn" editable="false" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" resizable="false" text="GF" />
            <TableColumn fx:id="gaColumn" editable="false" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" resizable="false" text="GA" />
            <TableColumn fx:id="gdColumn" editable="false" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" resizable="false" sortType="DESCENDING" text="GD" />
            <TableColumn fx:id="pointColumn" editable="false" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" resizable="false" sortType="DESCENDING" text="P" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>
